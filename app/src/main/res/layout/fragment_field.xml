<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16sp">

    <TextView
        android:id="@+id/fieldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Field Notes"
        android:textSize="35sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/dateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fieldTitle"
        android:text="Date and Time "
        android:textSize="30dp"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/sampleLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateTime"
        android:text="Sample Location"
        android:layout_marginTop="2dp"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/sampleDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sampleLoc"
        android:text="Sample Description"
        android:layout_marginTop="2dp"
        android:textSize="30dp"/>






</RelativeLayout>